<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:alertDialogTheme">@style/customAlert</item>
    </style>

    <style name="customAlert" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:buttonBarPositiveButtonStyle">@style/Button_Flat.Accent</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Button_Flat.Accent</item>
    </style>

    <style name="Button_Flat.Primary" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/primary_500</item>
    </style>

    <style name="Button_Flat.Accent" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/accent_500</item>
    </style>

</resources>
